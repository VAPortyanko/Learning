<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0"
         metadata-complete="true">

	<!-- Start page of the application -->
	 <welcome-file-list>  
		 <welcome-file>Web-content/index.html</welcome-file>  
	 </welcome-file-list>  


	 <!-- An example of sending a request from a form -->
     <servlet>
         <servlet-name>FormRequest</servlet-name>
         <servlet-class>by.pva.servletapi.requests.FormRequest</servlet-class>
     </servlet>
     <servlet-mapping>
         <servlet-name>FormRequest</servlet-name>
         <url-pattern>/Web-content/Requests/FormRequest/sendRequestFromTheForm</url-pattern>
     </servlet-mapping>


 	<!-- An example of getting a file -->
     <servlet>
         <servlet-name>BookDownloader</servlet-name>
         <servlet-class>by.pva.servletapi.responses.BookDownloader</servlet-class>
     </servlet>
     <servlet-mapping>
         <servlet-name>BookDownloader</servlet-name>
         <url-pattern>/docs/downloads/headFirst</url-pattern>
     </servlet-mapping>

 	<!-- A page redirect example -->
    <servlet>
         <servlet-name>Redirecter</servlet-name>
         <servlet-class>by.pva.servletapi.responses.Redirecter</servlet-class>
    </servlet>
    <servlet-mapping>
         <servlet-name>Redirecter</servlet-name>
         <url-pattern>/redirect</url-pattern>
    </servlet-mapping>
    
    
    <!-- An example of reading servlet specific parameters from a servlet config -->
    <servlet>
        <servlet-name>Contact</servlet-name>
        <servlet-class>by.pva.servletapi.servletconfig.ParameterReaderFromServletConfig</servlet-class>
	    	<init-param>
		    	<param-name>email</param-name>
	    		<param-value>somemail@gmail.com</param-value>
			</init-param>
			<init-param>
		    	<param-name>phone</param-name>
	    		<param-value>+375 (29) 77-77-777</param-value>
			</init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>Contact</servlet-name>
        <url-pattern>/showConatact</url-pattern>
    </servlet-mapping>


	<!-- An example of reading web app specific parameters from a servlet context -->
    <servlet>
    	<servlet-name>CompanyContact</servlet-name>
        <servlet-class>by.pva.servletapi.servletcontext.ParameterReaderFromServletContext</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CompanyContact</servlet-name>
        <url-pattern>/showCompanyConatact</url-pattern>
    </servlet-mapping>

	<context-param>
        <param-name>company_email</param-name>
        <param-value>SomeCompanyEmail@mail.com</param-value>
    </context-param>


	<!-- A servelt context listener example -->
    <servlet>
    	<servlet-name>ServletContextListener</servlet-name>
        <servlet-class>by.pva.servletapi.servletcontextlistener.ServletContextListenerExample</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletContextListener</servlet-name>
        <url-pattern>/testServletContextListener</url-pattern>
    </servlet-mapping>

    <context-param>
    	<param-name>breed</param-name>
        <param-value>Great Dane</param-value>
    </context-param>

	<listener>
        <listener-class>by.pva.servletapi.servletcontextlistener.MyServletContextListener</listener-class>
    </listener>

