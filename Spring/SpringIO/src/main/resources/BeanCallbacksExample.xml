<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        https://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- We can set default init and destroy methods for all beans-->
	<!-- <beans default-init-method="init"> ... </beans> -->

    <bean id="singletonBean" 
          class="by.pva.springio.beans.lifecycle.callbacks.SingletonBean"
          init-method="init"
          destroy-method="shutdown"
          scope="singleton">
    </bean>
    
    <!-- https://stackoverflow.com/questions/44756872/spring-core-default-bean-destroy-method -->
    <bean id="singletonBeanImpClosable" 
          class="by.pva.springio.beans.lifecycle.callbacks.SingletonBeanImpClosable"
          init-method="init"
          scope="singleton">
    </bean>
    
    <bean id="prototypeBean" 
          class="by.pva.springio.beans.lifecycle.callbacks.PrototypeBean"
          init-method="init"
          destroy-method="shutdown"
          scope="prototype">  
    </bean>

</beans>

